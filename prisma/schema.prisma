generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @db.Date
  email     String   @unique
  name      String
  password  String
  updatedAt DateTime @db.Date
}

model Contact {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String
  subject String
  message String
  createdAt DateTime @db.Date @default(now())
}